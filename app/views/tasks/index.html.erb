<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <p><%= "0" %> <%= link_to task.title, task_path(task) %></p>
  <% else %>
    <p><%= "X" %> <%= link_to task.title, task_path(task) %></p>
  <% end %>
<% end %>

<p><%= link_to "Create new task", new_path, class: "btn btn-primary" %></p>


